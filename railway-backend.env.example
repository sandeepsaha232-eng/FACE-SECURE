# Railway Backend Environment Variables
# Copy these to Railway Dashboard → Your Service → Variables

# Node Environment
NODE_ENV=production
PORT=5000

# MongoDB Connection (Get from MongoDB Atlas)
MONGODB_URI=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/facesecure?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_minimum_32_characters_long
JWT_EXPIRES_IN=1h

# Encryption Key (Must be exactly 32 characters)
ENCRYPTION_KEY=your_32_character_encryption_key

# ML Service URL (Update after deploying ML service)
ML_SERVICE_URL=https://your-ml-service.up.railway.app

# Face Recognition Thresholds
FACE_MATCH_THRESHOLD=0.85
FACE_MATCH_MFA_THRESHOLD=0.70

# Rate Limiting
MAX_VERIFICATION_ATTEMPTS=5
RATE_LIMIT_WINDOW_MS=60000

# Session Configuration
SESSION_TIMEOUT=3600

# CORS Origins (Add your Vercel frontend URL)
CORS_ORIGINS=https://your-frontend.vercel.app,https://your-custom-domain.com
