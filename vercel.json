{
    "version": 2,
    "builds": [
        {
            "src": "backend/src/index.ts",
            "use": "@vercel/node"
        },
        {
            "src": "frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "backend/src/index.ts"
        },
        {
            "src": "/assets/(.*)",
            "dest": "frontend/assets/$1"
        },
        {
            "src": "/(.*)",
            "dest": "frontend/index.html",
            "check": true
        }
    ]
}