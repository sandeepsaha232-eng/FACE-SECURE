# Environment
NODE_ENV=development

# Server
PORT=5000

# Database
MONGODB_URI=mongodb://localhost:27017/facesecure
# OR for PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost:5432/facesecure

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=1h

# ML Service
ML_SERVICE_URL=http://localhost:8000

# Security
ENCRYPTION_KEY=your-32-character-encryption-key-here
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Liveness Thresholds
MIN_MOTION_SCORE=0.7
MIN_TEXTURE_SCORE=0.8
MIN_QUALITY_SCORE=0.75
FACE_MATCH_THRESHOLD=0.85
FACE_MATCH_MFA_THRESHOLD=0.70

# Session
MAX_FAILED_ATTEMPTS=3
ATTEMPT_TIMEOUT_MINUTES=5
